<p id="notice"><%= notice %></p>

<h1>Measures</h1>

<%= link_to 'New Measure', new_measure_path %>

<table>
  <thead>
    <tr>
      <th>At</th>
      <th>Goal</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measures.order("created_at DESC").each do |measure| %>
      <tr>
        <td><%= measure.at %></td>
        <td><%= measure.goal.name %></td>
        <td><%= measure.amount %></td>
        <td><%= link_to 'Show', measure %></td>
        <td><%= link_to 'Edit', edit_measure_path(measure) %></td>
        <td><%= link_to 'Destroy', measure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
